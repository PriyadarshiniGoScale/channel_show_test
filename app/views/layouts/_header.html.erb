<div class='header'>
	<% if user_signed_in? %>
		<div class='row pull-right'>
			<div class='col-sm-9'></div>
			<div class='col-sm-2'>
				<label class='userName'><%= current_user.email %></label>
			</div>
			<div class='col-sm-1'>
				<%= button_to 'Logout', destroy_user_session_url, method: :delete, class: 'btn btn-danger' %>
			</div>
		</div>
	<% else %>
		<%if params[:controller] == 'shows' || params[:controller] == 'favorites'%>
			<div class='row pull-right'>
				<div class='col-sm-10'></div>
				<div class='col-sm-1'>
					<%= link_to 'LogIn', new_user_session_url, class: 'btn btn-primary' %>
				</div>
				<div class='col-sm-1'>
					<%= link_to 'SignUp', new_user_registration_url, class: 'btn btn-success' %>
				</div>
			</div>
		<%else%>
			<div class='row pull-right'>
				<%= link_to 'HOME', root_url, class: 'btn btn-primary' %>
			</div>
		<% end %>
	<% end %>
</div>